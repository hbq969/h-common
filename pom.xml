<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <distributionManagement>
        <repository>
            <id>thirdparty-cmss</id>
            <name>Nexus Releases Repository</name>
            <url>http://nexus.cmss.com:8081/repository/thirdparty-cmss/</url>
        </repository>
        <snapshotRepository>
            <id>thirdparty-snapshot</id>
            <name>Nexus Snapshots Repository</name>
            <url>http://nexus.cmss.com:8081/repository/thirdparty-snapshot/</url>
        </snapshotRepository>

    </distributionManagement>

    <parent>
        <groupId>com.github.hbq969</groupId>
        <artifactId>h-parent</artifactId>
        <version>3.0-SNAPSHOT</version>
        <relativePath/>
    </parent>

    <groupId>com.github.hbq969</groupId>
    <artifactId>h-common</artifactId>
    <version>3.0-SNAPSHOT</version>
    <name>h-common</name>
    <description>Spring Boot Archetype</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <ehcache.version>2.10.9.2</ehcache.version>
        <caffeine.version>2.5.5</caffeine.version>
        <jackson-dataformat.version>2.14.2</jackson-dataformat.version>
        <cglib.version>3.3.0</cglib.version>
        <jackson.version>2.13.2</jackson.version>
        <validation-api.version>2.0.1.Final</validation-api.version>
        <commons-net.version>3.8.0</commons-net.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-redis</artifactId>
        </dependency>

        <dependency>
            <groupId>net.sf.ehcache</groupId>
            <artifactId>ehcache</artifactId>
            <version>${ehcache.version}</version>
        </dependency>

        <dependency>
            <groupId>com.github.ben-manes.caffeine</groupId>
            <artifactId>caffeine</artifactId>
            <version>${caffeine.version}</version>
        </dependency>

        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-yaml</artifactId>
            <version>${jackson-dataformat.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-properties</artifactId>
            <version>${jackson-dataformat.version}</version>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-aop</artifactId>
        </dependency>

        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib</artifactId>
            <version>${cglib.version}</version>
        </dependency>

        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.validation</groupId>
            <artifactId>validation-api</artifactId>
            <version>${validation-api.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-net</groupId>
            <artifactId>commons-net</artifactId>
            <version>${commons-net.version}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>i18n/*</include>
                    <include>META-INF/**/*</include>
                    <include>static/hbq969-common/</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
